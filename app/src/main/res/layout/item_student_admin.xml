<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/ModernCard"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Avatar -->
        <androidx.cardview.widget.CardView
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="4dp"
            android:layout_marginEnd="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_button_primary">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_student_modern"
                    android:contentDescription="Avatar"
                    android:tint="@color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Student Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn A"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvStudentId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MSSV: 20201234"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvStudentClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lớp: D20CQCN01"
                android:textSize="12sp"
                android:textColor="@color/gray_500" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_settings_modern"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Edit"
                android:tint="@color/primary" />

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_notifications_modern"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:contentDescription="Delete"
                android:tint="@color/error" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
