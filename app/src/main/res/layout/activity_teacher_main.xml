<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xin chào, Giáo viên!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_manage_students"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý học sinh"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_register_students"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng ký học sinh"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_manage_scores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý điểm"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_view_reports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xem báo cáo"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đổi mật khẩu"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng xuất"
        android:textSize="16sp"
        android:padding="16dp"
        android:backgroundTint="#F44336"
        android:layout_marginTop="16dp" />

</LinearLayout>