<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm/Sửa Thời khóa biểu"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/gray_900"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center" />

        <!-- Subject -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/ModernTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên môn học"
            app:startIconDrawable="@drawable/ic_book"
            app:startIconTint="@color/primary"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Day -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/ModernTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Thứ trong tuần"
            app:startIconDrawable="@drawable/ic_calendar"
            app:startIconTint="@color/primary"
            android:layout_marginBottom="16dp">

            <Spinner
                android:id="@+id/spinnerDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Start Time -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/ModernTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giờ bắt đầu (HH:mm)"
            app:startIconDrawable="@drawable/ic_time"
            app:startIconTint="@color/primary"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- End Time -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/ModernTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giờ kết thúc (HH:mm)"
            app:startIconDrawable="@drawable/ic_time"
            app:startIconTint="@color/primary"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Room -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/ModernTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phòng học"
            app:startIconDrawable="@drawable/ic_location"
            app:startIconTint="@color/primary"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Teacher -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/ModernTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giảng viên"
            app:startIconDrawable="@drawable/ic_person"
            app:startIconTint="@color/primary"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtTeacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Class Name -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/ModernTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lớp"
            app:startIconDrawable="@drawable/ic_group"
            app:startIconTint="@color/primary"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtClassName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Hủy"
                android:textSize="16sp"
                android:layout_marginEnd="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Lưu"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
