<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.QLD" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xin chào, Quản trị viên!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:columnCount="2"
            app:rowCount="4"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:padding="8dp">

            <!-- Row 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_manage_users"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                app:layout_columnWeight="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_person"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="Manage Users" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quản lý người dùng"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_manage_students"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                app:layout_columnWeight="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_student"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="Manage Students" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quản lý học sinh"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Row 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_manage_subjects"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                app:layout_columnWeight="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_score"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="Manage Subjects" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quản lý môn học"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_manage_scores"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                app:layout_columnWeight="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_report"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="Manage Scores" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quản lý điểm"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Row 3 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_reports"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                app:layout_columnWeight="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_backup"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="View Reports" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xem báo cáo"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_change_password"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                app:layout_columnWeight="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_password"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="Change Password" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đổi mật khẩu"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Row 4 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_backup_import"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                app:layout_columnWeight="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_backup"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="Backup Import" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sao lưu &amp; Nhập"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_logout"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                app:layout_columnWeight="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/error_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_logout"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="Logout" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đăng xuất"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/white" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>